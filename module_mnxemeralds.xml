<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mnxemeralds" default="compile.module.mnxemeralds">
  <dirname property="module.mnxemeralds.basedir" file="${ant.file.module_mnxemeralds}"/>
  
  <property name="module.jdk.home.mnxemeralds" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mnxemeralds" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mnxemeralds" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mnxemeralds" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="mnxemeralds.output.dir" value="${module.mnxemeralds.basedir}/classes/production/mnxemeralds"/>
  <property name="mnxemeralds.testoutput.dir" value="${module.mnxemeralds.basedir}/classes/test/mnxemeralds"/>
  
  <path id="mnxemeralds.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mnxemeralds.module.production.classpath">
    <path refid="${module.jdk.classpath.mnxemeralds}"/>
  </path>
  
  <path id="mnxemeralds.runtime.production.module.classpath">
    <pathelement location="${mnxemeralds.output.dir}"/>
  </path>
  
  <path id="mnxemeralds.module.classpath">
    <path refid="${module.jdk.classpath.mnxemeralds}"/>
    <pathelement location="${mnxemeralds.output.dir}"/>
  </path>
  
  <path id="mnxemeralds.runtime.module.classpath">
    <pathelement location="${mnxemeralds.testoutput.dir}"/>
    <pathelement location="${mnxemeralds.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.mnxemeralds">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mnxemeralds">
    <patternset refid="excluded.from.module.mnxemeralds"/>
  </patternset>
  
  
  <target name="compile.module.mnxemeralds" depends="compile.module.mnxemeralds.production,compile.module.mnxemeralds.tests" description="Compile module mnxemeralds"/>
  
  <target name="compile.module.mnxemeralds.production" depends="register.custom.compilers" description="Compile module mnxemeralds; production classes"/>
  
  <target name="compile.module.mnxemeralds.tests" depends="register.custom.compilers,compile.module.mnxemeralds.production" description="compile module mnxemeralds; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mnxemeralds" description="cleanup module">
    <delete dir="${mnxemeralds.output.dir}"/>
    <delete dir="${mnxemeralds.testoutput.dir}"/>
  </target>
</project>